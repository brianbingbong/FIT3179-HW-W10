{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Energy Usage against Carbon Dioxide Production",
  "width": 600,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/brianbingbong/energy-data-viz/main/data/worldometers_energy.csv"
  },
  "params": [
    {
      "name": "re_above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 1,
        "step": 0.01,
        "name": "Min Renewable/Nuclear Proportion: "
      }
    },
    {
      "name": "re_below",
      "value": 1,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 1,
        "step": 0.01,
        "name": "Max Renewable/Nuclear Proportion: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.name != 'Gibraltar'"
    },
    {
      "filter": "datum.pc_yearly_btu > 0"
    },
    {
      "filter": "datum.co2_emiss_per_capita > 0"
    },
    {
      "filter": "datum.re_nuclear >= re_above"
    },
    {
      "filter": "datum.re_nuclear <= re_below"
    }
  ],
  "encoding": {
    "x": {
      "field": "pc_yearly_btu",
      "type": "quantitative",
      "title": "Energy per capita (BTU)",
      "axis": {
        "tickCount": 4
      },
      "scale": {
        "zero": false,
        "type": "log",
        "domain": [
          100,
          1000000
        ]
      }
    },
    "y": {
      "field": "co2_emiss_per_capita",
      "type": "quantitative",
      "title": "CO2 emissions per capita (ton)",
      "axis": {
        "tickCount": 8
      },
      "scale": {
        "zero": false,
        "domain": [
          0,
          40
        ]
      }
    }
  },
  "layer": [
    {
      "mark": {
        "type": "point",
        "size": 500,
        "opacity": 0.8
      },
      "encoding": {
        "color": {
          "field": "re_nuclear",
          "type": "quantitative",
          "title": "Renewable/Nuclear Fraction",
          "scale": {
            "scheme": "teals"
          }
        },
        "tooltip": [
          {
            "field": "name",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "re_nuclear",
            "type": "quantitative",
            "title": "Renewable/Nuclear Fraction"
          },
          {
            "field": "pc_yearly_btu",
            "type": "quantitative",
            "title": "Energy per capita (BTU)"
          },
          {
            "field": "co2_emiss_per_capita",
            "type": "quantitative",
            "title": "CO2 per capita (ton)"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "field": "name",
          "type": "nominal"
        },
        "color": {
          "value": "black"
        },
        "opacity": {
          "condition": {
            "test": "datum['name'] == 'China' || datum['name'] == 'United States' || datum['name'] == 'Australia' || datum['name'] == 'Montenegro'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {
            "field": "name",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "re_nuclear",
            "type": "quantitative",
            "title": "Renewable/Nuclear Fraction"
          },
          {
            "field": "pc_yearly_btu",
            "type": "quantitative",
            "title": "Energy per capita (BTU)"
          },
          {
            "field": "co2_emiss_per_capita",
            "type": "quantitative",
            "title": "CO2 per capita (ton)"
          }
        ]
      }
    }
  ]
}